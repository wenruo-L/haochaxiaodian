  add0:function (m){
    return m< 10 ? '0' + m : m
  },
	formatDate:function (needTime) {
    //needTime是整数，否则要parseInt转换
    var time = new Date(needTime);
    var y = time.getFullYear();
    var m = time.getMonth() + 1;
    var d = time.getDate();
    var h = time.getHours();
    var mm = time.getMinutes();
    var s = time.getSeconds();
    return y + '-' + this.add0(m) + '-' + this.add0(d) + ' ' + this.add0(h) + ':' + this.add0(mm) + ':' + this.add0(s);

    // timestampToTime
  },
  timestampToTime: function (timestamp){
    var date = new Date(parseInt(timestamp)); //时间戳为10位需*1000，时间戳为13位的话不需乘1000
    var Y = date.getFullYear() + '-';
    var M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
    var D = date.getDate() + ' ';
  
    return Y + M + D;
  },
  // ================================

  //手指触摸动作开始 记录起点X坐标

  touchstart: function (e) {
    
    
    if (this.data.device =="ios"){
      var scrollTop = this.data.scrollTop
      wx.pageScrollTo({
        scrollTop: scrollTop
      })
    }
    //开始触摸时 重置所有删除
    var list=null;
    
    if (this.data.currentTab==0){//我喜欢的进来
      
      
        list = this.data.goodsList
      
    }else{
      //我的足迹进来
      list = this.data.shopList
    }
    
    list.forEach(function (v, i) {

      if (v.isTouchMove){
          //只操作为true的

        v.isTouchMove = false;
      }
    })

    this.setData({

      startX: e.changedTouches[0].clientX,

      startY: e.changedTouches[0].clientY,

      

    })
    if (this.data.currentTab == 0){
      this.setData({
        goodsList: list
      })
    }else{
      this.setData({
        shopList: list
      })
    }
  },

  //滑动事件处理

  touchmove: function (e) {
    if (this.data.device == "ios"){
      var scrollTop = this.data.scrollTop
      wx.pageScrollTo({
        scrollTop: scrollTop
      })
    }
    
    var list = null;

    if (this.data.currentTab == 0) {//我喜欢的进来


      list = this.data.goodsList

    } else {
      //我的足迹进来
      list = this.data.shopList
    }
    var that = this
      
      var index = e.currentTarget.dataset.index//当前索引

      var startX = that.data.startX//开始X坐标

      var startY = that.data.startY//开始Y坐标

      var touchMoveX = e.changedTouches[0].clientX//滑动变化坐标

      var touchMoveY = e.changedTouches[0].clientY//滑动变化坐标

      //获取滑动角度

      var angle = that.angle({ X: startX, Y: startY }, { X: touchMoveX, Y: touchMoveY });

      list.forEach(function (v, i) {

      v.isTouchMove = false

      //滑动超过30度角 return

      if (Math.abs(angle) > 50){
        // that.setData({
        //   scrollY: true
        // })
        return;
      }else{
        // that.setData({
        //   scrollY: false
        // })
      }

      if (i == index) {

        if (touchMoveX > startX) //右滑

          v.isTouchMove = false

        else //左滑

          v.isTouchMove = true

      }

    })

    //更新数据

    // that.setData({

    //   goodsList: that.data.goodsList

    // })
      if (this.data.currentTab == 0) {
        this.setData({
          goodsList: list
        })
      } else {
        this.setData({
          shopList: list
        })
      }

  },

  /**
  
  * 计算滑动角度
  
  * @param {Object} start 起点坐标
  
  * @param {Object} end 终点坐标
  
  */

  angle: function (start, end) {

    var _X = end.X - start.X

     var  _Y = end.Y - start.Y

    //返回角度 /Math.atan()返回数字的反正切值

    return 360 * Math.atan(_Y / _X) / (2 * Math.PI);

  },

  //删除事件

  del: function (e) {
    // console.log(e.currentTarget.dataset.index)
    // console.log(e.currentTarget.dataset.productid)
    // console.log(e.currentTarget.dataset.shopid)
    
   
    var that=this

    var list = null
    var url = null

    var data = {}
    
    wx.showModal({
      title: '提示',
      content: '是否删除？',
      success: function (res) {
        if (res.confirm) {
          if (that.data.change == 1) {
            if (that.data.currentTab == 0) {
              //删除喜欢商品
              url = config.default.collect_good
              list = that.data.goodsList
              data = {
                shopId: e.currentTarget.dataset.shopid,
                productId: e.currentTarget.dataset.productid,
                operate: 1
              }
            } else {
              //删除喜欢小店
              url = config.default.collect_shop
              list = that.data.shopList
              data = {
                shopId: e.currentTarget.dataset.shopid,
                operate: 1
              }
            }

          } else {
            if (that.data.currentTab == 0) {
              //删除浏览商品
              url = config.default.cancel_the_goods
              list = that.data.goodsList
              data = {
                shopId: e.currentTarget.dataset.shopid,
                productId: e.currentTarget.dataset.productid,

              }
            } else {
              //删除浏览店铺
              url = config.default.cancel_the_shop
              data = {
                shopId: e.currentTarget.dataset.shopid

              }
              list = that.data.shopList
            }
            // list = this.data.shopList
          }


          wx.showLoading({
            title: '删除中...',
          })
          app.promise({
            url: url,
            datas: data,
            method: 'POST',
            contentType: "application/x-www-form-urlencoded",
            token: wx.getStorageSync('jwtToken')
          }).
            then((res) => {
              // console.log(res)
              // res.data.code == 0
              if (res.data.code == 0) {

                if (that.data.currentTab == 0) {
                  list.splice(e.currentTarget.dataset.index, 1)

                  that.setData({
                    goodsList: list
                  })
                } else {
                  list.splice(e.currentTarget.dataset.index, 1)

                  that.setData({
                    shopList: list
                  })
                }
                that.setData({
                  startX: 0, //开始坐标
                  startY: 0
                })
              }
              wx.hideLoading()
            })
            .catch((res) => {
              console.log(res)
            })
        } else if (res.cancel) {
         
        }
      }
    })
   
  },
  onPageScroll: function (e) { // 获取滚动条当前位置
   
