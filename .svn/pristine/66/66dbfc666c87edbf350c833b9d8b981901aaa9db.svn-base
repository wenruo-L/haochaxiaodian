const config = require("../../utils/config.js")
var app = getApp();
Page({
  data: {
    h_text: [
      {
        text: "喜欢商品"
      },
      {
        text: "喜欢小店"
      }
    ],
  
    winHeight: "", //窗口高度
    currentTab: 0, //预设当前项的值
    scrollLeft: 0, //tab标题的滚动条位置
    goodsList:[],
    shopList:[],
    nowPage:0,
    totalPages:0,
    change:null,
    url:null,
    isShowGoods:false,
    isShowShop: false
  },

  swichNav: function(e) {
    var cur = e.currentTarget.dataset.current;

    this.setData({
      currentTab: cur,
      nowPage: 0,
      totalPages: 0,
      goodsList: [],
      shopList: [],
    })
  

    if (this.data.change == 1){
        
        if (e.currentTarget.dataset.current == 0){
          this.setData({
            url: config.default.user_like_good
          })
          this.goods(this)
        }else{
          this.setData({
            url: config.default.user_like_shop
          })
          this.shop(this)
        }
    } else{

      if (e.currentTarget.dataset.current == 0) {
        this.setData({
          url: config.default.browse_the_goods
        })
        this.goods(this)
      } else {
        this.setData({
          url: config.default.browse_the_shop
        })
        this.shop(this)
      }
      
    }
   
   
  },

  onLoad: function(data) {
    var that = this;
    //  高度自适应
    wx.getSystemInfo({
      success: function(res) {
        var clientHeight = res.windowHeight,
          clientWidth = res.windowWidth,
          rpxR = 750 / clientWidth;
        var calc = clientHeight * rpxR - 180;

        that.setData({
          winHeight: calc
        });
      }
    });
   
    that.setData({
      change: data.change,
      goodsList: [],
      shopList: [],
    })
    if (data.change==2){
      var obj=[
        {
          text: "浏览商品"
        },
        {
          text: "浏览小店"
        }
      ]
      that.setData({
        h_text: obj
      })
      wx.setNavigationBarTitle({ title: '我的足迹' }) 
    }
   
    var url = null
    if (that.data.change == 1) {//我喜欢的商品
      url = config.default.user_like_good
    } else {//我浏览的商品
      url = config.default.browse_the_goods
    }
    that.setData({
      url: url
    })
    this.goods(this)
  },
  
  onShow: function() {
    // goodsList: [],
    //   shopList:[],
    // if (wx.getStorageSync('jwtToken') != '' ){
     
    //   this.goods(this)
     
    // }else{

    // }
    
  },
  //喜欢商品
  goods:function(that){
    wx.showLoading({
      title: '加载中.....',
      mask:true
    })
    
    var that=this

   
    app.promise({
      url:that.data.url,
      datas: {
        page: that.data.nowPage
       
      },
      method: 'GET',
      contentType: "application/json",
      token: wx.getStorageSync('jwtToken')
    }).
      then((data) => {
        console.log(data)
        if (data.data.code == 0) {
          wx.hideLoading()
          
          for (var i = 0; i < data.data.data.pages.content.length;i++){
            // var time=that.GetDateByShiJianChuo(data.data.data.pages.content[i].updateTime)
            var time = that.formatDate(parseInt(data.data.data.pages.content[i].updateTime))
              
            data.data.data.pages.content[i].updateTime=time
            var num = data.data.data.pages.content[i].productSub.productSkuSub.price / 100
            data.data.data.pages.content[i].productSub.productSkuSub.price=num.toFixed(2)
            
          }
          
          that.setData({
            goodsList: that.data.goodsList.concat(data.data.data.pages.content),
            totalPages: data.data.data.pages.totalPages
          })
          
          if (that.data.goodsList.length == 0) {
            that.setData({
              isShowGoods: true
            })
          }
        }
      })
      .catch((err) => {
        console.log(err)
      })
  },
  //喜欢小店
  shop:function(that){
   
    wx.showLoading({
      title: '加载中.....',
      mask: true
    })
  
    app.promise({
      url: that.data.url,
      datas: {
        page: that.data.nowPage
       
      },
      method: 'GET',
      contentType: "application/json",
      token: wx.getStorageSync('jwtToken')
    }).
      then((data) => {
       
        if (data.data.code == 0) {
          wx.hideLoading()
          
          for (var i = 0; i < data.data.data.pages.content.length; i++) {

            // var time = that.GetDateByShiJianChuo(data.data.data.pages.content[i].updateTime)
            var time = that.formatDate(parseInt(data.data.data.pages.content[i].updateTime))

            data.data.data.pages.content[i].updateTime = time
          }
          
          that.setData({
            shopList: that.data.shopList.concat(data.data.data.pages.content),
            totalPages: data.data.data.pages.totalPages
          })
          // console.log(that.data.shopList)
          if (that.data.shopList.length==0){
            that.setData({
              isShowShop:true
            })
          }
        }

      })
      .catch((err) => {
        console.log(err)
      })
  },
  go:function(e){
    app.saveShopId = false
    if (e.currentTarget.dataset.collageprice==0){//等于0去单买
      wx.navigateTo({
        url: '../own_buy/own_buy?id=' + e.currentTarget.dataset.goodsid,
      })
    }else{
      
      wx.navigateTo({
        url: '../group_booking/group_booking?id=' + e.currentTarget.dataset.goodsid
      })
    }
  },
  goShop:function(e){
   
  
    wx.reLaunch({
    
      url: '../index/index?shiopId=' + e.currentTarget.dataset.shopid
    })
   
  },

  onReachBottom:function(){
    if (this.data.nowPage<this.data.totalPages-1){
      this.data.nowPage++
      
      if (this.data.currentTab==0){
        this.goods(this)
      } else if (this.data.currentTab==1){
        this.shop(this)
      }
      // console.log(this.data.goodsList)
    }else{
       
        wx.showToast({
          title: '到底了.....',
        })
    }
  },
  /**
    * 页面相关事件处理函数--监听用户下拉动作
    */
  onPullDownRefresh: function () {
   
   
    // this.setData({

    // })
    //   if (this.data.currentTab == 0) {
    //     this.goods(this)
    //   } else if (this.data.currentTab == 1) {
    //     this.shop(this)
    //   }
      // console.log(this.data.goodsList)
    
  },
  add0:function (m){
    return m< 10 ? '0' + m : m
  },
	formatDate:function (needTime) {
    //needTime是整数，否则要parseInt转换
    var time = new Date(needTime);
    var y = time.getFullYear();
    var m = time.getMonth() + 1;
    var d = time.getDate();
    var h = time.getHours();
    var mm = time.getMinutes();
    var s = time.getSeconds();
    return y + '-' + this.add0(m) + '-' + this.add0(d) + ' ' + this.add0(h) + ':' + this.add0(mm) + ':' + this.add0(s);
  }

})