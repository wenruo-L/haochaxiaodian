  onLoad: function (options) {
    var that = this;

    // that.get_token()
    that.setData({
      shop_id_obj: wx.getStorageSync('shop_id')
    })

    // if (options.shareShopId) {
    //   wx.setStorageSync('shop_id', options.shareShopId)
