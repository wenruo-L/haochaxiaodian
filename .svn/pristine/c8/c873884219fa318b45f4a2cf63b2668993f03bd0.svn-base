      success: function(res) {},
      fail: function(res) {},
      complete: function(res) {},
    })
    wx.saveImageToPhotosAlbum({
      filePath: that.data.saveGoogimgPath,
      success: function (res) {
        console.log("保存图片到本地", res)
        if (res.errMsg == "saveImageToPhotosAlbum:ok"){
          wx.hideLoading()
          wx.showToast({
            title: '保存成功！',
            icon: 'success'
          })
          that.setData({
            share_commission: true,
            good_poster_hidden: true          
          })
        }
      },
      fail:function(res){
        if (res.errMsg === "saveImageToPhotosAlbum:fail auth deny"){
          wx.openSetting({
            success: function(res) {
              console.log(res)
              if (res.authSetting['scope.writePhotosAlbum']){
                wx.showToast({
                  title: '正在为您下载图片',
                  icon:'none'
                })
              }else{
                wx.showToast({
                  title: '无法下载图片！',
                  icon: 'none'
                })
              }
            },
            fail: function(res) {},
            complete: function(res) {},
          })
        }
      }
    })
  },
  //获取分享商品的海报
  showShareWithFriends:function(){
    var that = this
    wx.getSetting({
      success(res) {
        if (!res.authSetting['scope.writePhotosAlbum']) {
          wx.authorize({
            scope: 'scope.writePhotosAlbum',
            success(res) {
              console.log('===============储存图片授权成功', res)
            },
            fail(res) {
              console.log('===============储存图片授权失败', res)
              wx.showToast({
                title: '拒绝授予权限将无法进行相关权限！',
                icon:'none'
              })
            }
          })
        }
      }
    })
    if (that.data.choose == 0){
      that.setData({
        share_type:0
      })
      wx.showLoading({
        title: '正在生产分享海报',
        icon:"loading"
      })
      wx.request({
        url: config.shop_poster,
        method: 'GET',
        data: {
          productId: that.data.shangpinIds,
          type: that.data.share_type
        },
        header: {
          'content-type': 'application/json',// GEt的请求方式为默认 
          Authorization: that.data.token
        },
        success: function (res) {
          wx.hideLoading()
          if (res.data.code != 0) {
            wx.hideLoading()
            console.log("111")
            var errmsg = res.data.msg
            wx.showToast({
              title: errmsg,
              icon: "none"
            })
          
          }
          console.log("拿回分享商品的海报", res)
          var good_posters = res.data.data.userShareProduct.poster
          wx.getImageInfo({
            src: good_posters,
            success:function(res){
              console.log("图片的详细信息",res)
              var path = res.path
              that.setData({
                saveGoogimgPath: path
              })
            }
          })
          that.setData({
            good_poster_hidden:false,
            good_poster: good_posters
          })
          
        }
      })
      return
    }
    if (that.data.choose != 0){
      that.setData({
        share_type: 1
      })
      wx.showLoading({
        title: '正在生产分享海报',
        icon: "loading"
      })
      wx.request({
        url: config.shop_poster,
        method: 'GET',
        data: {
          productId: that.data.shangpinIds,
          type: that.data.share_type
        },
        header: {
          'content-type': 'application/json',// GEt的请求方式为默认 
          Authorization: that.data.token
        },
        success: function (res) {
         wx.hideLoading()
          if (res.data.code != 0) {
            wx.hideLoading()
            console.log("111")
            var errmsg = res.data.msg
            wx.showToast({
              title: errmsg,
              icon: "none"
            })
          }
          console.log("拿回分享商品的海报", res)
          var good_posters = res.data.data.userShareProduct.poster
          wx.getImageInfo({
            src: good_posters,
            success: function (res) {
              console.log("图片的详细信息", res)
              var path = res.path
              that.setData({
                saveGoogimgPath: path
              })
            }
          })
          that.setData({
            good_poster_hidden: false,
            good_poster: good_posters
          })
        }
      })
    }

