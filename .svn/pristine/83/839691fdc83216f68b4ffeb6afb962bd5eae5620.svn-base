          <view class='redPackeTextWrap'  wx:else>
            <image src='../../common/image/index_img/newShare.png' class='redPacketIcon'></image>
            <text class='redPackeText'>分享</text>
          </view>
        </view>        

      </view>
    </view>
<!-- 拼团结束 -->

  </view>
</view>

