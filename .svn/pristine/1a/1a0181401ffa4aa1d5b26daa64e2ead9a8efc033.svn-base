  },
  /**
   * 页面的初始数据
   */
  data: {
    region: ['广东省', '广州市', '海珠区'],
    array: ['美国', '中国', '巴西', '日本'],
    array2: ['100元以下', '100~300元', '300~500元'],
    array3: ['1~50平米', '50~100平米', '100~200平米', '200~400平米', '400~1000平米'],
    multiArray: [['','工厂 ', '批发市场 '], ['','自产 ', '朋友 '], ['','其他']], 
  },
  
  
  

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.get_tealist()
  },
    get_tealist(){
      wx.getStorage({
        key: 'login_Uid',
        success:(res)=>{
          console.log(res.data.token)
          var jtoken = res.data.token       
          console.log(jtoken)
          wx.request({
            url: 'http://lp.apit.haocha.top/category/list',
            method: 'GET',
            header: {
              'Authorization': jtoken
            },         
            success: (e)=>{
              console.log(e.data.data.list)
              var pinlei_list = e.data.data.list;
              console.log(pinlei_list)                
              var _array=[]
              pinlei_list.forEach((el)=> {
                _array.push(el.name)
                  this.setData({
                    array:_array
                })
              });
            }
          })
        }
      })  
    },

  /**
   * 生命周期函数--监听页面初次渲染完成
