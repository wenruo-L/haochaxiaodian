  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    var that = this;

    app.shop_id = wx.getStorageSync("shop_id")

    // that.get_token()
    //接取附近小店缓存好的店铺id
    that.setData({
      shop_id_obj: wx.getStorageSync("shop_id")
    })


    if (options.id) {
      app.shop_id = options.id
      that.setData({
        shop_id_obj: options.id
      })
    }
    if (options.shareUserId) {
      shareUserId: options.shareUserId
    }
    //扫码进入
    if (options.scene) {
      var scene = decodeURIComponent(options.scene);
      if (scene.startsWith("0=")){//shopId
        app.shop_id = scene.substring(2)
        that.setData({
          shop_id_obj: app.shop_id
        })
      } else if (scene.startsWith("10=")){//userShareShopId
        that.setData({
          userShareShopId: scene.substring(3)
        })
      }
    }

    console.log(!that.data.shop_id_obj)
    console.log(!that.data.userShareShopId)
   
    //没有店铺id或分享店铺id将跳转到附近小店页面
    // console.log(that.data.shop_id_obj)
    if (!that.data.shop_id_obj && !that.data.userShareShopId) {
      that.noShopidSkipToSearch_index()
      return
    }
    var jwtToken = wx.getStorageSync('jwtToken')
    that.setData({
      token: jwtToken
    })

    /** 
     * 获取系统信息 
     */
    wx.getSystemInfo({
      success: function(res) {
        that.setData({
          winWidth: res.windowWidth,
          winHeight: res.windowHeight
        });
      }
    })
  },

