// pages/confirm_order /confirm_order .js
import config from "../../utils/config.js"
const app = getApp()

Page({

  /**
   * 页面的初始数据
   */
  data: {
    receiptAddress:"",//用户地址，没有会为null
    address_id:"",
    productId:"",
    productSkuId:"",
    payPrice:"",  
    buyNum:"",
    realPay:"",
    realPayWithFreight: "",
    collage:"",
    token:"",
    zhendezonge:'',
    freight:null,
    nofreight:0,
    freightPayType:4,
    payType:2,
    fail_msg:"",
    local_address:"",
    ziti:true,
    NoChangeFreight:"",
    shifu:"",
    shareUserId: "",
    userShareShopId: "",
    userShareProductId: "",
    dingdanId:"",
    luckyMoney:"",
    NoChangeluckyMoney:"",
    luckyMoneyIcon:true,
    noChangeRealpay:0,
    sendRealpay:"",
    balancePay:0
  },
  // 限制input的值为0
  get_num_limit: function (res) {
    var that = this;
   
    if (res.detail.value == 0 && res.detail.value <= 1) {
      wx.showToast({
        title: '最少选择一件商品哦~',
        icon: 'none'
      })
      that.setData({
        buyNum: 1
      })
      that.gettotal()
    }
  },
  //获取input的值
  get_num: function (res) {
    var that = this;
    var buyNum = that.data.buyNum;
    var payPrice = that.data.payPrice;
    var freight = that.data.freight;
    var realPayNofreight = that.data.realPay;
    realPayNofreight = Number(buyNum * payPrice)
    that.setData({
      buyNum: res.detail.value,
      zhendezonge: realPayNofreight
    })
    that.gettotal()
  },
  jia: function () {
    // 点击加一的按钮
    var that = this;
    var num = that.data.buyNum;
    if (num == 1 || num > 1) {
      num++;
    }
    var buyNum = that.data.buyNum;
    var payPrice = that.data.payPrice;
    var freight = that.data.freight;
    var realPayNofreight = that.data.realPay;
    realPayNofreight = Number(buyNum * payPrice)
    that.setData({
      buyNum: num,
      zhendezonge: realPayNofreight
    })
    that.gettotal();
  },
  jian: function () {
    // 点击减一的按钮
    var that = this;
    var num = that.data.buyNum;
    if (num > 1) {
      num--;
    }
    var buyNum = that.data.buyNum;
    var payPrice = that.data.payPrice;
    var freight = that.data.freight;
    var realPayNofreight = that.data.realPay;
    realPayNofreight = Number(buyNum * payPrice)
    that.setData({
      buyNum: num,
      zhendezonge: realPayNofreight
    })
    that.gettotal();
  }, 
  // 计算总价
  gettotal: function () {
    var that = this;
    wx.showLoading({
      title: '正在计算总额~'
    })
    var goodnum = that.data.buyNum; //件数
    var goodprice = that.data.payPrice;//单价
    var yunfeia = that.data.freight//运费
    var zongji = that.data.shifu;
    zongji = Number(goodprice * goodnum) + Number(yunfeia)
    that.setData({
      realPay: zongji,
      sendRealpay: zongji,
      noChangeRealpay: zongji
    })
    wx.hideLoading()
  },

  to_choose_address: function (e) {
    wx.navigateTo({
      url: '../choose_address/choose_address?id=1'
    })
  },

  choose_luckyMoney: function () {
    var that = this;
    var nochangefreight = that.data.NoChangeFreight;
    var buyNum = that.data.buyNum;
    var payPrice = that.data.payPrice;
    var freight = that.data.freight;
    var realPays = that.data.realPay;
    var realPayHavelucky = that.data.noChangeRealpay;
    var luckyMoney = that.data.luckyMoney
    var nofreight = Number(buyNum * payPrice) 
    var havefreight = Number(buyNum * payPrice) + Number(nochangefreight)
    console.log(freight)
    if(that.data.ziti == false){
      realPays = Number(buyNum * payPrice) - Number(luckyMoney)
      realPayHavelucky = Number(buyNum * payPrice) 
      console.log(1)
    }else{
      realPays = Number(buyNum * payPrice) + Number(nochangefreight) - Number(luckyMoney)
      realPayHavelucky = Number(buyNum * payPrice) + Number(nochangefreight) 
      console.log(2)
    }
    if (that.data.luckyMoneyIcon == true) {
      that.setData({
        luckyMoneyIcon: false,
        realPay: realPays,
      })
    } else {
        that.setData({
          luckyMoneyIcon: true,
          realPay: realPayHavelucky,
        })

    }
  },
  choose_ziti:function(){
    var that = this;
    var nochangefreight = that.data.NoChangeFreight;
    var buyNum = that.data.buyNum;
    var payPrice = that.data.payPrice;
    var freight = that.data.freight;
    var realPays = that.data.realPay;
    var luckyMoney = that.data.luckyMoney
    var realPayHavefreight = that.data.noChangeRealpay;
    if (that.data.luckyMoneyIcon == false){
      realPays = Number(buyNum * payPrice) - Number(luckyMoney)
      realPayHavefreight = Number(buyNum * payPrice) + Number(nochangefreight) - Number(luckyMoney)
      console.log(3)
    }else{
      realPays = Number(buyNum * payPrice)
      realPayHavefreight = Number(buyNum * payPrice) + Number(nochangefreight)
      console.log(4)
    }

    if(that.data.ziti==true){
      that.setData({
        ziti: false,
        realPay: realPays,
        sendRealpay: realPays,
        freightPayType:1,
        freight:0
      })
    }else{
  
        that.setData({
          ziti: true,
          realPay: realPayHavefreight,
          sendRealpay: realPayHavefreight,
          freightPayType: 4,
          freight: nochangefreight
        })
      
    }
  },
  // 提交订单
  payment:function(e){
    // 创建订单的数据
    var that = this;
    wx.showLoading({
      title: '正在提交',
      mask:true
    })
    that.noDefaultAddressToChooseAddress()
    if (that.data.address_id) {
      console.log("that.data.luckyMoney", that.data.balancePay)
      console.log("that.data.sendRealpay", that.data.sendRealpay)
      wx.request({
        url: config.create_order,
        method: 'POST',
        data: {
          productId: that.data.productId,
          productSkuId: that.data.productSkuId,
          payPrice: that.data.payPrice,
          payType: that.data.payType,
          buyNum: that.data.buyNum,
          realPay: that.data.sendRealpay,
          freight: that.data.freight,
          collage: that.data.collage,
          receiptAddressId: that.data.address_id,
          freightPayType: that.data.freightPayType,
          shareUserId: that.data.shareUserId,
          userShareShopId: that.data.userShareShopId,
          userShareProductId: that.data.userShareProductId,
          balancePay: that.data.balancePay
        },
        header: {
          'Content-Type': 'application/x-www-form-urlencoded', // POST的请求方式不一样 
          Authorization: that.data.token
        },
        success: function (res) {
          console.log(res)
          if (res.data.code != 0) {
            wx.hideLoading()
            var errmsg = res.data.msg
            wx.showToast({
              title: errmsg,
              icon: "none"
            })
          } else {
            wx.hideLoading()
            var orderId = res.data.orderId;
            var timeStamp = res.data.data.timeStamp;
            var nonceStr = res.data.data.nonceStr;
            var packages = res.data.data.package;
            var signType = res.data.data.signType;
            var paySign = res.data.data.sign;
            that.setData({
              dingdanId: orderId
            })
           
            wx.requestPayment({
              timeStamp: timeStamp,
              nonceStr: nonceStr,
              package: packages,
              signType: signType,
              paySign: paySign,
              success: function (e) {
                wx.hideLoading()
                if (e.errMsg == "requestPayment:ok") {                
                  wx.redirectTo({
                    url: '../pay_success/pay_success?dingdanId=' + that.data.dingdanId + "&productId=" + that.data.productId + "&collage=" + that.data.collage,
                  })
                }
              },
              fail: function (e) {
                wx.hideLoading()
                if (e.errMsg == "requestPayment:fail cancel") {
                  wx.redirectTo({
                    url: '../all_order/all_order',
                  })
                } else {
                  var err_msg = e.err_desc;
                 
                  wx.setStorageSync('failmsg', err_msg)
                  wx.navigateTo({
                    url: '../pay_fail/pay_fail',
                  })
                }
              }
            })
          }
        }
      })
    } else {
      wx.showToast({
        title: '您还没有收货地址，去选择或创建您的收货地址吧',
        icon: 'none',
        duration: 1500,
        mask: true,
        success() {
          setTimeout(() => {
            wx.navigateTo({
              url: '../choose_address/choose_address',
            })
          }, 1000)
        }
      })
    }
  },
  //单独获取地址的数据
  alone_get_address:function(){
    var that = this;
    var _token = wx.getStorageSync('jwtToken')
 
    that.setData({
      token: _token
    })
    wx.showLoading({
      title: '加载中',
      mask: true
    })
    app.promise({
      url: config.confirm_an_order,
      datas: {
        productId: that.data.productId,
        productSkuId: that.data.productSkuId,
        payPrice: that.data.payPrice,
        buyNum: that.data.buyNum,
        realPay: that.data.zhendezonge,
        collage: that.data.collage,
      },
      method: 'POST',
      contentType: "application/x-www-form-urlencoded ",
      token: that.data.token
    }).
    then((res)=>{
      wx.hideLoading()
      if (res.data.code == 0){
        if (!res.data.data.receiptAddress) {
         
          that.setData({
            address_id: ""
          })
          return
        }else{          
          var address_detail = res.data.data.receiptAddress
          that.setData({
            receiptAddress: address_detail,
            address_id: res.data.data.receiptAddress.id
          })
        }
      }
    })
  },

  // 获取《确认订单》页面的数据
  get_confirm_order_data:function(){
    var that = this;
    var _token = wx.getStorageSync('jwtToken')
    that.setData({
      token: _token
    })
    wx.showLoading({
      title: '加载中',
      mask: true
    })
    wx.request({
      url: config.confirm_an_order ,
      method: 'POST',
      data: {
        productId: that.data.productId,
        productSkuId: that.data.productSkuId,
        payPrice: that.data.payPrice,
        buyNum: that.data.buyNum,
        realPay: that.data.realPay,
        collage: that.data.collage,
      },
      header: {
        'Content-Type': 'application/x-www-form-urlencoded', // POST的请求方式不一样 
        Authorization: that.data.token
      },
      success:function(res){
        if (res.data.code != 0) {
          var errmsg = res.data.msg
          wx: wx.showModal({
            title: '提示',
            content: errmsg,
            showCancel: false,
            cancelText: '',
            cancelColor: '',
            confirmText: '',
            confirmColor: '',
            success: function (res) {

            },
            fail: function (res) { },
            complete: function (res) { },
          })
          setTimeout(function () {
            wx.navigateBack({
              delta: 1,
            })
          }, 1000)
          return
        }
        wx.hideLoading()
          console.log("确认订单",res)
          var danmai_num1 = res.data.data.product.productSkuSub.price
          var yunfei = res.data.data.product.productSkuSub.inProvinceFreight
          var heji_num = res.data.data.realPay
          var address_json =res.data.data.receiptAddress//用户地址
          var price = res.data.data.product.productSkuSub.price
          var bubiandeyunfei = res.data.data.product.productSkuSub.inProvinceFreight
          if (res.data.data.userProfit){
            var luckyMoney = res.data.data.userProfit.balance
          }
          that.setData({
            con_order: res.data.data.product,//确认订单的全部数据信息
            payPrice: price,
            freight: yunfei,//运费分
            NoChangeFreight:bubiandeyunfei,
            luckyMoney: luckyMoney,
            NoChangeluckyMoney: luckyMoney
          })
      }
    })
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    
    this.setData({
      productId: options.productid,
      productSkuId: options.skuid,
      payPrice: options.price,
      buyNum: options.buynum,
      realPay: options.realpay,
      zhendezonge:options.realpay,
      collage: options.collage,
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
    var that = this
    var shareUserId = wx.getStorageSync("shareUserId")
    var userShareShopId = wx.getStorageSync("userShareShopId")
    var userShareProductId = wx.getStorageSync("userShareProductId")
    that.setData({
      shareUserId: shareUserId,
      userShareShopId: userShareShopId,
      userShareProductId: userShareProductId
    })
    that.get_confirm_order_data()
    setTimeout(function () {
      that.gettotal()
    }, 800)
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {   
    this.setData({
      isLogin: wx.getStorageSync('isLoginsChange')
    })
  
    if (wx.getStorageSync('jwtToken') == '') {
    
      this.setData({
        isLogin: ''
      })
    } else {
      var that=this
      setTimeout(function(){
        that.gettotal()
        that.alone_get_address()  
      },500)
      that.gettotal()
     
    }
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
  
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
  
  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
  
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
  
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  },
  // 判断用户是否默认地址，没有会跳去选择地址页面
  noDefaultAddressToChooseAddress: function () {
    var that = this;
    if (that.data.address_id != '') {
      return
    } else {  
      wx.showToast({
        title: '您还没有收货地址，去选择或创建您的收货地址吧',
        icon: 'none',
        duration: 1500,
        mask: true,
        success() {
         
          setTimeout(() => {
            wx.navigateTo({
              url: '../choose_address/choose_address',
            })
          }, 1000)
        }
      })
    }
  }
})